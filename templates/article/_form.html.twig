{{ form_start(form) }}
    {% if title  is defined  %}
        <h2 class="title">{{ title }}</h2>
    {% endif %}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}

<div class="flex">
        <div class="image-preview">
            {% if not article.imageUrl == ""  %}
                <img src="{{article.imageUrl}}" alt="Image de l'artilce : {{article.title}}">
            {% endif %}
        </div>
        <div class="">
            {% if required is defined %}
                {{ form_row(form.imageFile,{attr:{required: required}}) }}
            {% else %}
                {{ form_row(form.imageFile) }}
            {% endif %}
        </div>
    </div>
    
    {{ form_row(form.categories) }}
    <div class="flex">
        <a href="{{ path('app_article_index') }}" class="btn">Annuler</a>
        <button class="btn btn-primary">{{ button_label|default('Poster') }}</button>

    </div>
{{ form_end(form) }}



