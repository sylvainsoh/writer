{% extends 'base.html.twig' %}

{% block title %}Jstore | Log in!{% endblock %}
{% set aside = "not" %}

{% block header %}
    {{ include('header/header.html.twig', {name : "Connexion"})}}
{% endblock %}

{% block body %}
<div class="row ">
    <div class="col-lg-8 col-lg-offset-2">
        <form method="post">
            <p>Pas encore de compte ? <a href="{{ path("app_register")}}">clique ici</a> pour en créer un. </p>
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                   Connexion réussie,  {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <div class="form-group flex">
                <input
                        type="email"
                        value="{{ last_username }}"
                        name="email"
                        placeholder="Email ..."
                        id="inputEmail"
                        class="form-control flex-1"
                        autocomplete="email" required autofocus>

            </div>
            <div class="form-group flex">
                <input
                        type="password"
                        name="password"
                        placeholder="Mot de passe ..."
                        id="inputPassword"
                        class="form-control flex-1"
                        autocomplete="current-password" required>

            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit">
              Connexion
            </button>
        </form>
    </div>
</div>
{% endblock %}
